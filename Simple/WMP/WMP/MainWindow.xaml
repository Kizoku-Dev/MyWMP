<Window x:Class="WMP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="605.2" Width="914"
        Loaded="MainWindow_Loaded">
    <Grid Margin="198.4,28,0,0">
        <MediaElement Name="media1" Height="425" Margin="10,10,10.2,0" VerticalAlignment="Top" MediaOpened="media1_MediaOpened"/>
        <Slider Name="sliderMedia" HorizontalAlignment="Left" Margin="10,440,0,0" VerticalAlignment="Top" Width="671" Minimum="0" PreviewMouseLeftButtonDown="slideMedia_MouseDown" PreviewMouseLeftButtonUp="slideMedia_MouseUp"/>
        <Slider Name="sliderVolume" HorizontalAlignment="Left" Margin="556,477,0,0" VerticalAlignment="Top" Width="125" Minimum="0" Maximum="1" Value="0.5" ValueChanged="slideVolume_ValueChanged"/>
        <Label Content="Volume" HorizontalAlignment="Left" Margin="502,468,0,0" VerticalAlignment="Top" Height="27"/>
        <Button Name="btnPlay" Content="Play/Pause" HorizontalAlignment="Left" Margin="308,477,0,0" VerticalAlignment="Top" Width="75" Height="38" Click="btnPlay_Click" />
        <Button Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="244,477,0,0" VerticalAlignment="Top" Width="47" Height="38" Click="btnStop_Click"/>
        <Button Name="btnOpen" Content="Open" HorizontalAlignment="Left" Margin="29,477,0,0" VerticalAlignment="Top" Width="48" Height="38" Click="btnOpen_Click"/>
        <Button Name="btnMusic" Content="Music" HorizontalAlignment="Left" Margin="-186.8,10,0,0" VerticalAlignment="Top" Width="75" Click="btnMusic_Click">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Select the directory" Click="btnMusic_selectDirectory"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <ListView Name="listLibraryMusic" HorizontalAlignment="Left" Height="391.907" Margin="29,25.222,0,0" VerticalAlignment="Top" Width="652" GridViewColumnHeader.Click="listLibraryMusic_Click" Visibility="Collapsed">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Filename" Width="150" DisplayMemberBinding="{Binding Filename}" />
                    <GridViewColumn Header="Title" Width="150" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Album" Width="150" DisplayMemberBinding="{Binding Album}" />
                    <GridViewColumn Header="Author" Width="150" DisplayMemberBinding="{Binding Author}" />
                    <GridViewColumn Header="Length" Width="150" DisplayMemberBinding="{Binding Length}" />
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" Handler="listLibraryMusicItem_DoubleClick" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Button Name="btnVideo" Content="Video" HorizontalAlignment="Left" Margin="-186.8,34.96,0,0" VerticalAlignment="Top" Width="75" Click="btnVideo_Click">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Select the directory" Click="btnVideo_selectDirectory"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <ListView Name="listLibraryVideo" HorizontalAlignment="Left" Height="391.907" Margin="29,25.222,0,0" VerticalAlignment="Top" Width="652" GridViewColumnHeader.Click="listLibraryVideo_Click" Visibility="Collapsed">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Filename" Width="150" DisplayMemberBinding="{Binding Filename}" />
                    <GridViewColumn Header="Title" Width="150" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Album" Width="150" DisplayMemberBinding="{Binding Album}" />
                    <GridViewColumn Header="Author" Width="150" DisplayMemberBinding="{Binding Author}" />
                    <GridViewColumn Header="Length" Width="150" DisplayMemberBinding="{Binding Length}" />
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" Handler="listLibraryVideoItem_DoubleClick" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <Button Name="btnImage" Content="Image" HorizontalAlignment="Left" Margin="-186.8,59.92,0,0" VerticalAlignment="Top" Width="75" Click="btnImage_Click">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Select the directory" Click="btnImage_selectDirectory"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <ListView Name="listLibraryImage" HorizontalAlignment="Left" Height="391.907" Margin="29,25.222,0,0" VerticalAlignment="Top" Width="652" GridViewColumnHeader.Click="listLibraryImage_Click" Visibility="Collapsed">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Filename" Width="150" DisplayMemberBinding="{Binding Filename}" />
                    <GridViewColumn Header="Title" Width="150" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Album" Width="150" DisplayMemberBinding="{Binding Album}" />
                    <GridViewColumn Header="Author" Width="150" DisplayMemberBinding="{Binding Author}" />
                    <GridViewColumn Header="Length" Width="150" DisplayMemberBinding="{Binding Length}" />
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" Handler="listLibraryImageItem_DoubleClick" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>
