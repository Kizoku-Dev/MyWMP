            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="598*"/>
            <ColumnDefinition Width="337*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.ColumnSpan="3" HorizontalAlignment="Left" Width="969" Margin="0,0,-0.2,0" x:Name="imageDeFond"/>
